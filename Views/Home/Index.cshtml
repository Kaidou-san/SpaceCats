    <div class="text-center">
        <h1>All Cats</h1>
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Breed</th>
                <th>Weapon</th>
                <th>Mortal Enemy</th>
                <th>Lives</th>
            </tr>
            @{
                foreach(Cat s in ViewBag.AllCats)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.Breed</td>
                    <td>@s.Weapon</td>
                    <td>@s.MortalEnemy</td>
                    <td>@s.Lives</td>
                </tr>
            }
        }
        </table>
